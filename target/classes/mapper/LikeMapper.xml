<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orangeBlog.mapper.LikeMapper">

    <select id="countArticle" resultType="int" parameterType="map">
        SELECT COUNT(*)
        FROM `like`
        WHERE  type = 0 AND operation_obj = #{id}
    </select>

    <select id="countComment" resultType="int" parameterType="map">
        SELECT COUNT(*)
        FROM `like`
        WHERE  type = 1 AND operation_obj = #{id}
    </select>
</mapper>
