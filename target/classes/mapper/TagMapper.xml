<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orangeBlog.mapper.TagMapper">
    <select id="getAllTagNames" resultType="com.orangeBlog.entity.Tag">
        SELECT id, tag_name FROM tag;
    </select>

    <select id="getTagsByArticleId" resultType="com.orangeBlog.entity.Tag">
        SELECT * FROM `tag` WHERE id IN (SELECT tag_id FROM article_tag WHERE article_id = #{id})
    </select>
</mapper>
