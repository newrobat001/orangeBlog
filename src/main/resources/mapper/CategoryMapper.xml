<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orangeBlog.mapper.CategoryMapper">

    <select id="getAllCategory" resultType="com.orangeBlog.entity.Category">
        SELECT * FROM category ;
    </select>

    <select id="getAllCategoryNames" resultType="com.orangeBlog.entity.Category">
        SELECT id, category_name FROM category ;
    </select>

    <select id="getNameById" resultType="com.orangeBlog.entity.Category">
        SELECT id, category_name FROM category where id=#{id};
    </select>

    <select id="getCateName" resultType="string">
        SELECT category_name FROM category where id=#{id};
    </select>

    <select id="getCOUNT" resultType="integer">
        SELECT COUNT(*)
        FROM article
        WHERE category_id = #{id};
    </select>

</mapper>
